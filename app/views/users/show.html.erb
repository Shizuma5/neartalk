<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <div>
        <%= link_to "+", micropost_path %>
      </div>
      <% @microposts.each {|micropost| %>
        <%= render 'layouts/microposts', micropost: micropost %>
      <% } %>
    </section>
  </aside>
</div>
